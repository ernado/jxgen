func ({{ $s.Receiver }} *{{ $s.Name }}) EncodeJSON(e *jx.Encoder) error {
	{{- range $f := $s.Fields }}
	{
        e.Field("{{ $f.Key }}", func(e *jx.Encoder) {
            e.{{ $f.EncodeMethod }}({{ $s.Receiver }}.{{ $f.Name }})
        })
    }
	{{- end }}
    return nil
}

