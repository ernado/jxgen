	{{- range $i, $f := $s.Fields }}
	{
		{{- if gt $i 0 }}
		w.Comma()
		{{- end }}
		w.FieldStart("{{ $f.Key }}")
		w.{{ $f.EncodeMethod }}({{ $s.Receiver }}.{{ $f.Name }})
    }
	{{- end }}
}


